.line-table {
  text-align: center;
  direction: ltr;
  border: solid 1px #DDEEEE;
  border-collapse: collapse;
  border-spacing: 0;
  font: normal 13px Arial, sans-serif;
  align-self: center;
}
.line-table thead th {
  text-align: center;
  background-color: #DDEFEF;
  border: solid 1px #DDEEEE;
  color: #336B6B;
  padding: 10px;
  text-shadow: 1px 1px 1px #fff;
  max-width: 45px;
  border-bottom: solid 1px darkgrey;
}
.line-table tbody td {
  border: solid 1px #DDEEEE;
  color: #333;
  padding: 2px;
  text-shadow: 1px 1px 1px #fff;
  word-wrap: break-word;
  max-width: 45px;
}

.line-table tbody tr.line-route {
  background-color: rgba(192, 198, 190, 0.3);
}

